<table class="table table-hover table-md mb-0">
  <thead>
    <tr>
      <th class="border-top-0">Name</th>
      <th class="border-top-0">Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% events.each do |event| %>
      <tr>
        <td><%= event_name(event) %> </td>
        <td><%= event.scheduled_on.strftime("%d\'%b %R") %></td>
        <td>
          <%= link_to fa_icon('check'), event_set_done_path(event), class:'btn btn-sm btn-outline-success rounds' %>
        </td>
        <td>
          <%= link_to fa_icon('times'), event_set_cancelled_path(event), class:'btn btn-sm btn-outline-warning round' %>
        </td>
        <td>
          <%= link_to fa_icon('ban'), event, method: :delete, class:'btn btn-sm btn-outline-danger round', data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
