<div class='row'>
  <div class='col-md-4'>
    <br/>
    <h1>Users</h1>
  </div>
  <div class='col-md-3'>
    <br/>
    <%= link_to 'New User', new_user_path, class:"btn btn-primary" %>
  </div>
</div>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, user %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(user), class:"btn btn-outline-primary" %>
        </td>
        <td>
          <%= link_to 'Destroy', user_path(user), method: :delete,
                                                  data: { confirm: 'Are you sure?' },
                                                  class:"btn btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
