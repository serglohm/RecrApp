<div class='row'>
  <div class='col-md-4'>
    <br/>
    <h1>Vacancies</h1>
  </div>
  <div class='col-md-3'>
    <br/>
    <%= link_to 'New Vacancy', new_vacancy_path, class:'btn btn-primary' %>
  </div>
</div>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Salary(net)</th>
      <th>Description</th>
      <th>TG_Ru</th>
      <th>TG_En</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr <%= 'class=table-secondary' if vacancy.closed? %>>
        <td><%= link_to vacancy.name, vacancy %></td>
        <td><%= link_to vacancy.company.name, vacancy.company %></td>
        <td><%= vacancy.salary_min %> - <%= vacancy.salary_max %> EUR</td>
        <%= check_completion(vacancy.description) %>
        <%= check_completion(vacancy.telegraph_link_ru) %>
        <%= check_completion(vacancy.telegraph_link_en) %>
        <td><%= link_to 'Edit', edit_vacancy_path(vacancy) %></td>
        <td><%= link_to 'Delete', vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
