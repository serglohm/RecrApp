<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% vacancy.candidates.in_progress.each do |candidate| %>
      <tr>
        <td><%= link_to candidate.name, candidate %></td>
        <td><%# candidate.assignments.find(vacancy.id).status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
