<div class="card-header">
  <h4 class="card-title">This month placements</h4>
</div>
<div class="card-content collapse show">
  <div class="card-body">
    <div clas="row">
    </div>
    <% placements.each do |candidate| %>
      <p>
        <%= candidate.name %>: starting at <%= candidate.get_offer.start_date %>
        <% if !candidate.get_offer.invoiced? %>
          <%= link_to "Set Invoiced", assignment_set_invoiced_path(candidate.get_offer),
                                      data: {assignment_id: candidate.get_offer.id},
                                      class:'btn btn-outline-success btn-sm' %>
        <% end %>
      </p>
    <% end %>
  </div>
</div>
